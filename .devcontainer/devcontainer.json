{
  "name": "python-uv-sync",
  "build": { 
    "dockerfile": "Dockerfile", 
    "context": ".." 
  },

  // Make the bind-mount explicit (host repo -> container workspace)
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": false,
      "username": "vscode"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python", 
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.terminal.activateEnvironment": false
      }
    }
  },
  
  // original
  // "postCreateCommand": "bash -lc 'set -e; sudo mkdir -p /home/vscode/.cache/uv /home/vscode/.cache/pip; sudo chown -R vscode:vscode /home/vscode/.cache/uv /home/vscode/.cache/pip; if [ -f pyproject.toml ] || [ -f uv.lock ]; then uv sync --active; fi'",


  "postCreateCommand": "bash -lc 'cp -f .devcontainer/p10k/.p10k.zsh /home/vscode/.p10k.zsh; grep -q \"source ~/.p10k.zsh\" /home/vscode/.zshrc || printf \"\\n# Load Powerlevel10k\\nsource ~/.p10k.zsh\\n\" >> /home/vscode/.zshrc'",

  
  "mounts": [
    "type=volume,source=uv-cache,target=/home/vscode/.cache/uv",
    "type=volume,source=pip-cache,target=/home/vscode/.cache/pip"
  ]
}
